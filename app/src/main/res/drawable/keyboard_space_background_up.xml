<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:id="@+id/space_pressed"
                android:bottom="0dp"
                android:left="@dimen/normal_margin"
                android:right="@dimen/normal_margin"
                android:state_pressed="true"
                android:top="@dimen/normal_margin">
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_grey_600" />
                    <corners
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"
                        android:topLeftRadius="8dp"
                        android:topRightRadius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:id="@+id/space_normal"
                android:bottom="0dp"
                android:left="@dimen/normal_margin"
                android:right="@dimen/normal_margin"
                android:state_pressed="true"
                android:top="@dimen/normal_margin">
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_grey_700" />
                    <corners
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"
                        android:topLeftRadius="8dp"
                        android:topRightRadius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
